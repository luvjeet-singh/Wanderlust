<% layout("/layouts/boilerplate") -%>

<style>
#filters {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.filter {
  text-align: center;
  margin-right: 2rem;
  margin-top: 2rem;
  opacity: 0.7;
  text-decoration: none;
}

.filter:hover {
  opacity: 1;
  cursor: pointer;
}

.filter p {
  font-size: 0.8rem;
}

.tax-info {
  display: none;
}

.tax-toggle {
  border: 1px solid black;
  border-radius: 1rem;
  height: 3.25rem;
  padding: 1rem;
  margin-left: 2rem;
  display: flex;
  align-items: center;
}
</style>

<body>
    <div id="filters">
        <a href="/listings/filter?category=trending" class="filter text-dark" >
            <div><i class="fa-solid fa-fire"></i></div>
            <p>Trending</p>
        </a>
        <a href="/listings/filter?category=rooms" class="filter text-dark">
            <dv><i class="fa-solid fa-bed"></i></dv>
            <p>Rooms</p>
        </a>
        <a href="/listings/filter?category=iconic cities" class="filter text-dark">
            <dv><i class="fa-solid fa-mountain-city"></i></dv>
            <p>Iconic cities</p>
        </a>
        <a href="/listings/filter?category=mountains" class="filter text-dark">
            <dv><i class="fa-solid fa-mountain"></i></dv>
            <p>Mountains</p>
        </a>
        <a href="/listings/filter?category=castles" class="filter text-dark">
            <dv><i class="fa-brands fa-fort-awesome"></i></dv>
            <p>Castles</p>
        </a>
        <a href="/listings/filter?category=amazing pools" class="filter text-dark">
            <dv><i class="fa-solid fa-person-swimming"></i></dv>
            <p>Amazing pools</p>
        </a>
        <a href="/listings/filter?category=camping" class="filter text-dark">
            <dv><i class="fa-solid fa-campground"></i></dv>
            <p>Camping</p>
        </a>
        <a href="/listings/filter?category=farms" class="filter text-dark">
            <dv><i class="fa-solid fa-cow"></i></dv>
            <p>Farms</p>
        </a>
        <a href="/listings/filter?category=arctic" class="filter text-dark">
            <dv><i class="fa-solid fa-snowflake"></i></dv>
            <p>Arctic</p>
        </a>

        <div class="tax-toggle">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
            </div>
        </div>

    </div>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <% for(let listing of allListings) { %>
        <a href="/listings/<%= listing._id %>" class="listing-link">
        <div class="card col listing-card">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="listing-image" style="height: 20rem;">
            <div class="card-img-overlay"></div>
            <div class="card-body">
            <p class="card-text">
                <b><%= listing.title %></b>
                <br/>
                &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
                <i class="tax-info">&nbsp; &nbsp; +18% GST</i>
            </p>
            </div>
            
        </div>
        </a>
        <% } %>
    </div>
</body>

<script src="/js/taxToggle.js"></script>